<Window x:Class="ExcelViewerV2.Search.FindDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Znajdź"
        Width="520"
        Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Find -->
            <RowDefinition Height="Auto"/>   <!-- Options -->
            <RowDefinition Height="*"/>      <!-- Results -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>

        <!-- FIND LABEL -->
        <TextBlock Text="Znajdź:"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0"/>

        <!-- FIND TEXTBOX -->
        <TextBox x:Name="FindTextBox"
                 Grid.Row="0"
                 Grid.Column="0"
                 Margin="60,0,10,0"
                 Height="24"/>

        <!-- OPTIONS -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,10,0,6">
            <CheckBox x:Name="MatchCaseCheckBox"
                      Content="Uwzględnij wielkość liter"/>
            <CheckBox x:Name="MatchWholeCellCheckBox"
                      Content="Dopasuj całą zawartość komórki"/>
        </StackPanel>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    HorizontalAlignment="Right">

            <Button Content="Znajdź następne"
                    Height="26"
                    Width="130"
                    Margin="0,0,0,6"
                    Click="OnFindNext"/>

            <Button Content="Znajdź wszystko"
                    Height="26"
                    Width="130"
                    Click="OnFindAll"/>
        </StackPanel>

        <!-- RESULTS -->
        <GroupBox Header="Wyniki wyszukiwania"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Margin="0,6,0,0">

            <DockPanel>

                <TextBlock x:Name="ResultsInfoText"
                           DockPanel.Dock="Top"
                           Margin="6"
                           Foreground="Gray"/>

                <ListBox x:Name="ResultsListBox"
                         Margin="6"
                         MouseDoubleClick="ResultsListBox_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="4">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold"
                                               Text="{Binding SheetName}"/>
                                    <TextBlock FontSize="11"
                                               Foreground="Gray"
                                               Text="{Binding DisplayText}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </DockPanel>
        </GroupBox>

    </Grid>
</Window>
